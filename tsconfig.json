{
  "compilerOptions": {
    "target": "ESNext",                           // Latest ECMAScript features
    "module": "CommonJS",                         // Node.js compatibility
    "strict": true,                               // Strict type-checking options
    "esModuleInterop": true,                      // Compatibility with CommonJS modules
    "skipLibCheck": true,                         // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,     // Consistent casing of file names
    "outDir": "./dist",                           // Output directory for compiled files
    "rootDir": "./src",                           // Root directory of input files
    "baseUrl": "./",                              // Base directory for resolving non-relative module names
    "paths": {                                    // Path mappings for module resolution
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "src/**/*.ts",                                // Include all TypeScript files
    "src/**/*.test.ts",                           // Include TypeScript test files
    "src/types.d.ts"                              // Custom types definition file
  ],
  "exclude": [
    "node_modules",                              // Exclude node_modules directory
    "**/*.spec.ts"                               // Exclude .spec.ts files from compilation
  ]
}
